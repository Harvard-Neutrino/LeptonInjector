        extra_compile_args=extra_compile_args,
        ),
    Pybind11Extension("Math",
        [sourcedir+"projects/math/private/pybindings/math.cxx"],
        define_macros = [('VERSION_INFO', __version__)],
        library_dirs=[builddir],
        libraries=['LeptonInjector'],
        extra_compile_args=extra_compile_args,
        ),
    Pybind11Extension("Dataclasses",
        [sourcedir+"projects/dataclasses/private/pybindings/dataclasses.cxx"],
        define_macros = [('VERSION_INFO', __version__)],
        library_dirs=[builddir],
        libraries=['LeptonInjector'],
        extra_compile_args=extra_compile_args,
        ),
    Pybind11Extension("Geometry",
        [sourcedir+"projects/geometry/private/pybindings/geometry.cxx"],
        define_macros = [('VERSION_INFO', __version__)],
        library_dirs=[builddir],
        libraries=['LeptonInjector'],
        extra_compile_args=extra_compile_args,
        ),
    Pybind11Extension("Detector",
        [sourcedir+"projects/detector/private/pybindings/detector.cxx"],
        define_macros = [('VERSION_INFO', __version__)],
        library_dirs=[builddir],
        libraries=['LeptonInjector'],
        extra_compile_args=extra_compile_args,
        ),
    Pybind11Extension("CrossSections",
        [sourcedir+"projects/crosssections/private/pybindings/crosssections.cxx"],
        define_macros = [('VERSION_INFO', __version__)],
        library_dirs=[builddir],
        libraries=['LeptonInjector'],
        extra_compile_args=extra_compile_args,
        ),
    Pybind11Extension("Distributions",
        [sourcedir+"projects/distributions/private/pybindings/distributions.cxx"],
        define_macros = [('VERSION_INFO', __version__)],
        library_dirs=[builddir],
        libraries=['LeptonInjector'],
        extra_compile_args=extra_compile_args,
        ),
    Pybind11Extension("Injection",
        [sourcedir+"projects/injection/private/pybindings/injection.cxx"],
        define_macros = [('VERSION_INFO', __version__)],
        library_dirs=[builddir],
        libraries=['LeptonInjector'],
        extra_compile_args=extra_compile_args,
        ),
]

setup(
    name="LeptonInjector_PythonBindings",
    version=__version__,
    author="Nicholas Kamp",
    author_email="nwkamp@mit.edu",
    url="https://github.com/austinschneider/LeptonInjectorDevPrivate",
    description="pybind11 python bindings for LeptonInjector",
    long_description="",
    ext_modules=ext_modules,
    extras_require={"test": "pytest"},
    zip_safe=False,
    python_requires=">=3.7",
)

